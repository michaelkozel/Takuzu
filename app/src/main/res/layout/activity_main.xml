<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroudColor"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_horizontal_margin"
    tools:context="net.zdendukmonarezio.takuzu.presentation.main.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="108dp"
        android:fontFamily="@string/font"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/loading_screen_size" />

    <Button
        android:id="@+id/button"
        android:layout_width="@dimen/loading_screen_size"
        android:layout_height="@dimen/loading_screen_size"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginTop="26dp"
        android:background="@drawable/rounded_button_red"
        android:fontFamily="@string/font"
        android:onClick="startGame4"
        android:text="4"
        android:textColor="@color/white"
        android:textSize="@dimen/loading_screen_button_text_size" />

    <Button
        android:id="@+id/button2"
        android:layout_width="@dimen/loading_screen_size"
        android:layout_height="@dimen/loading_screen_size"
        android:layout_alignBottom="@+id/button"
        android:layout_alignTop="@+id/button"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_button_blue"
        android:fontFamily="@string/font"
        android:onClick="startGame6"
        android:text="6"
        android:textColor="@color/white"
        android:textSize="@dimen/loading_screen_button_text_size" />

    <Button
        android:id="@+id/button3"
        android:layout_width="@dimen/loading_screen_size"
        android:layout_height="@dimen/loading_screen_size"
        android:layout_alignBottom="@+id/button2"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignStart="@+id/button6"
        android:layout_alignTop="@+id/button2"
        android:background="@drawable/rounded_button_red"
        android:fontFamily="@string/font"
        android:onClick="startGame8"
        android:text="8"
        android:textColor="@color/white"
        android:textSize="@dimen/loading_screen_button_text_size" />

    <Button
        android:id="@+id/button4"
        android:layout_width="@dimen/loading_screen_size"
        android:layout_height="@dimen/loading_screen_size"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_below="@+id/button"
        android:layout_marginTop="12dp"
        android:background="@drawable/rounded_button_blue"
        android:fontFamily="@string/font"
        android:onClick="startGame16"
        android:text="16"
        android:textColor="@color/white"
        android:textSize="@dimen/loading_screen_button_text_size" />

    <Button
        android:id="@+id/button5"
        android:layout_width="@dimen/loading_screen_size"
        android:layout_height="@dimen/loading_screen_size"
        android:layout_alignBottom="@+id/button4"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_alignTop="@+id/button4"
        android:background="@drawable/rounded_button_red"
        android:fontFamily="@string/font"
        android:onClick="startGame32"
        android:text="32"
        android:textColor="@color/white"
        android:textSize="@dimen/loading_screen_button_text_size" />

    <Button
        android:id="@+id/button6"
        android:layout_width="@dimen/loading_screen_size"
        android:layout_height="@dimen/loading_screen_size"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignTop="@+id/button5"
        android:background="@drawable/rounded_button_blue"
        android:fontFamily="@string/font"
        android:onClick="startGame64"
        android:text="64"
        android:textColor="@color/white"
        android:textSize="@dimen/loading_screen_button_text_size" />
</RelativeLayout>